{
  "name": "nda-lib",
  "version": "1.0.0",
  "description": "mono repo for NDA ng library, ui and demo app",
  "publishConfig": {
    "@nda:registry": "https://nexus.nimhda.org/repository/nda-npm-private/"
  },
  "scripts": {
    "build:lib": "ng build --prod nda-angular && replace '@VERSION' $npm_package_version dist/nda-angular/package.json && cpy --parents --cwd='projects/nda-angular/src/lib/scripts' '**/*.ts' '../../../../../dist/nda-angular/lib/scripts'",
    "build:electron": "ng build --prod nda-electron && replace '@VERSION' $npm_package_version dist/nda-electron/package.json",
    "build:demo": "npm run prestart && ng build --prod",
    "build:ui:clean": "rimraf dist/nda-ui/*",
    "build:ui:css": "node-sass --include-path=node_modules --precision=6 --indentedSyntax=true projects/nda-ui/scss/main.scss projects/nda-ui/css/main.css",
    "build:ui:concat": "concat -o dist/nda-ui/nda-ui.css node_modules/normalize.css/normalize.css node_modules/font-awesome-base64/index.css projects/nda-ui/css/*.css",
    "build:ui:src": "cpy --parents --cwd='projects/nda-ui/scss' '**/*.scss' '../../../dist/nda-ui/src/'",
    "build:ui:model": "cpy 'projects/nda-ui/scss/helpers/*.scss' src/assets/model/",
    "build:ui:optimize": "csso dist/nda-ui/nda-ui.css dist/nda-ui/nda-ui.min.css --map file",
    "build:ui:package": "cpy projects/nda-ui/package.json projects/nda-ui/README.md dist/nda-ui/ && replace '@VERSION' $npm_package_version dist/nda-ui/package.json",
    "build:ui": "npm-run-all build:ui:clean build:ui:css build:ui:concat build:ui:src build:ui:optimize build:ui:package",
    "build:ui:web": "webpack --config webpack.ui.config.js",
    "build:ui:all": "npm-run-all build:ui build:ui:model",
    "build:all": "npm-run-all build:ui:all build:lib build:electron build:demo",
    "pack:lib": "npm run build:lib && cd dist/nda-angular && npm pack",
    "pack:electron": "npm run build:electron && cd dist/nda-electron && npm pack",
    "pack:ui": "npm run build:ui:all && cd dist/nda-ui && npm pack",
    "pack:all": "npm-run-all pack:lib pack:electron pack:ui",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prestart": "node dist/nda-angular/lib/scripts/version.ts",
    "start": "npm run build:all && ng serve",
    "dev": "npm-run-all build:lib prestart && ng serve",
    "dev:ui": "npm-run-all build:ui prestart && ng serve",
    "test": "ng test",
    "test:sg": "ng test nda --source-map=false",
    "test:lib": "npm run build:lib && ng test nda-angular --source-map=false",
    "publish:lib": "npm run pack:lib && cd dist/nda-angular && npm publish",
    "publish:ui": "npm run pack:ui && cd dist/nda-ui && npm publish",
    "publish:electron": "npm run pack:electron && cd dist/nda-electron && npm publish",
    "publish:all": "npm-run-all publish:lib publish:ui publish:electron",
    "publish:all:patch": "npm-run-all version:patch publish:lib publish:ui publish:electron",
    "aws:dev": "aws s3 sync dist/nda/ s3://nda-style-guide/ --acl public-read",
    "deploy:sg": "npm-run-all build:demo aws:dev",
    "deploy": "npm-run-all publish:all deploy:sg",
    "deploy:patch": "npm-run-all version:patch deploy",
    "deploy:minor": "npm-run-all version:minor deploy",
    "deploy:major": "npm-run-all version:major deploy"
  },
  "dependencies": {
    "@angular/animations": "^8.0.0",
    "@angular/common": "^8.0.0",
    "@angular/compiler": "^8.0.0",
    "@angular/core": "^8.0.0",
    "@angular/forms": "^8.0.0",
    "@angular/platform-browser": "^8.0.0",
    "@angular/platform-browser-dynamic": "^8.0.0",
    "@angular/router": "^8.0.0",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.5.4",
    "highlight.js": "^9.15.6",
    "moment": "^2.24.0",
    "ngx-highlightjs": "^3.0.3",
    "ngx-mask": "^7.9.8",
    "ngx-moment": "^3.4.0",
    "ngx-spinner": "^6.1.2",
    "rxjs": "^6.5.2",
    "web-animations-js": "github:angular/web-animations-js#release_pr208",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular-devkit/build-ng-packagr": "~0.800.0",
    "@angular/cli": "^8.0.2",
    "@angular/compiler-cli": "^8.0.0",
    "@angular/language-service": "^8.0.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.1",
    "concat": "^1.0.3",
    "cpy-cli": "^2.0.0",
    "css-loader": "^1.0.0",
    "csso-cli": "^1.1.0",
    "del-cli": "^1.1.0",
    "font-awesome-base64": "^1.0.4",
    "git-describe": "^4.0.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "mini-css-extract-plugin": "^0.4.1",
    "ng-packagr": "^5.1.0",
    "node-sass": "^4.12.0",
    "node-sass-tilde-importer": "^1.0.2",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^4.0.3",
    "protractor": "~5.3.0",
    "replace": "^1.0.0",
    "rimraf": "^2.6.2",
    "ts-node": "~5.0.1",
    "tsickle": "^0.35.0",
    "tslib": "^1.9.0",
    "tslint": "~5.9.1",
    "typescript": "~3.4.5",
    "webpack-cli": "^3.0.8"
  }
}
